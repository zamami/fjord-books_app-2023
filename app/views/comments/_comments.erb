<table>
  <thead>
  <tr>
    <th><%= User.model_name.human %></th>
    <th><%= Comment.human_attribute_name(:body) %></th>
    <th><%= Comment.human_attribute_name(:created_at) %></th>
  </tr>
  </thead>

  <tbody>
  <% commentable.comments.includes(:user).each do |comment| %>
    <tr>
      <td><%= comment.user.name.empty? ? comment.user.email : comment.user.name %></td>
      <td><%= comment.body %></td>
      <td><%= l(comment.created_at, format: :short) %>
      <% if current_user == comment.user %>
        <td><%= link_to t('views.common.destroy',name: Comment.model_name.human), polymorphic_path([commentable, comment]), data: { turbo_method: :delete } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
